<h1>Listing requests</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Location</th>
    <th>Skills</th>
    <th>Summary</th>
    <th>Start date</th>
    <th>End date</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.subject %></td>
    <td><%= request.location %></td>
    <td><%= request.skills %></td>
    <td><%= request.summary %></td>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= request.user_id %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

